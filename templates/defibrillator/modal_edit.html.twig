<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">{{ modal_title }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ include('defibrillator/_modal_form.html.twig') }}
            </div>
            <div class="modal-footer">
                {% if defibrillator.id %}
                    <div class="mr-auto">
                        {{ include('defibrillator/_modal_delete_form.html.twig') }}
                    </div>
                {% endif %}
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="js-modal-submit btn btn-primary" form="modal-form">Save</button>
            </div>
        </div>
    </div>
</div>