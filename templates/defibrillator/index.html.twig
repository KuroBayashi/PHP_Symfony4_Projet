{% extends 'base.html.twig' %}

{% block title %}Defibrillator index{% endblock %}

{% block body %}
    <h1>Defibrillator index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Longitude</th>
                <th>Latitude</th>
                <th>Note</th>
                <th>Available</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for defibrillator in defibrillators %}
            <tr>
                <td>{{ defibrillator.id }}</td>
                <td>{{ defibrillator.longitude }}</td>
                <td>{{ defibrillator.latitude }}</td>
                <td>{{ defibrillator.note }}</td>
                <td>{{ defibrillator.available ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('defibrillator_show', {'id': defibrillator.id}) }}">show</a>
                    <a href="{{ path('defibrillator_edit', {'id': defibrillator.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('defibrillator_new') }}">Create new</a>
{% endblock %}
